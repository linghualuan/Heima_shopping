<view class="cates">
    <SearchInput></SearchInput>
    <!-- 左侧菜单 -->
    <view class="cates_content">
        <scroll-view scroll-y class="left_menu">
            <view 
            class="menu_item {{index === leftIndex?'active':''}}"
            wx:for="{{leftMenuList}}"
            wx:key="*this"
            bindtap="handleItemTap"
            data-index="{{index}}"
            >
            {{item}}
            </view>
        </scroll-view>
        <scroll-view scroll-y class="right_menu" scroll-top="{{scrollTop}}">
            <view 
            class="right_content"
            wx:for="{{rightContent}}"
            wx:for-index="index1"
            wx:for-item="item1"
            >
                <view class="goods_title">
                    /{{item1.cat_name}}/
                </view>
                <view class="goods_content">
                    <navigator 
                    wx:for="{{item1.children}}"
                    open-type="navigate"
                    wx:for-index="index2"
                    wx:for-item="item2"
                    url="../goods_list/index?cid={{item2.cat_id}}"
                    >
                        <image mode="widthFix" src="{{item2.cat_icon}}"/>
                        <view class="goods_name">
                            {{item2.cat_name}}
                        </view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>